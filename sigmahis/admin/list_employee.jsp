		if (!request.getParameter("searchValToDate").equals("SVTD")) searchValToDate = request.getParameter("searchValToDate");
  }
	
	String codigo  = "";               // variables para mantener el valor de los campos filtrados en la consulta
	String nombre  = "";
	String estatus = "";

	if (request.getParameter("code") != null)
	{
		appendFilter += " and upper(emp_code) like '%"+request.getParameter("code").toUpperCase()+"%'";

    searchOn = "emp_code";
    searchVal = request.getParameter("code");
    searchType = "1";
    searchDisp = "Código";
		codigo     = request.getParameter("code");    // utilizada para mantener el código del empleado
	}
	else if (request.getParameter("name") != null)
	{
		appendFilter += " and upper(emp_name) like '%"+request.getParameter("name").toUpperCase()+"%'";

    searchOn = "emp_name";
    searchVal = request.getParameter("name");
    searchType = "1";
    searchDisp = "Nombre";
		nombre     = request.getParameter("name");       // utilizada para mantener el nombre del empleado
	}
	else if (request.getParameter("status") != null)
	{
		appendFilter += " and upper(emp_status) like '%"+request.getParameter("status").toUpperCase()+"%'";

    searchOn = "emp_status";
    searchVal = request.getParameter("status");
    searchType = "1";
    searchDisp = "Status";
		estatus    = request.getParameter("status");    // utilizada para mantener el estatus del empleado
	}	
	else if (request.getParameter("searchQuery") != null && !request.getParameter("searchOn").equals("Todos") && (!request.getParameter("searchVal").equals("SV") || (!request.getParameter("searchValFromDate").equals("SVFD") && !request.getParameter("searchValToDate").equals("SVTD"))) && !request.getParameter("searchType").equals("ST"))
  {
    if (searchType.equals("1"))
    {
			appendFilter += " and upper("+searchOn+") like '%"+searchVal.toUpperCase()+"%'";
    }
  }
  else
  {
    searchOn="SO";
    searchVal="Todos";
    searchType="ST";
    searchDisp="Listado";
  }

	sql = "select a.emp_id id, a.emp_code code, a.emp_name name, a.emp_status status, b.profile_name profileName from tbl_sec_employees a, tbl_sec_profiles b where a.emp_default_profile=b.profile_id and a.emp_id!=0"+appendFilter;
	al = SQLMgr.getDataList("select * from (select rownum as rn, a.* from ("+sql+") a) where rn between "+previousVal+" and "+nextVal);
	rowCount = CmnMgr.getCount("select count(*) from tbl_sec_employees where emp_id!=0"+appendFilter);

  if (searchDisp!=null) searchDisp=searchDisp;
  else searchDisp = "Listado";
  if (!searchVal.equals("")) searchValDisp=searchVal;
  else searchValDisp="Todos";

  int nVal, pVal;
  int preVal=Integer.parseInt(previousVal);
  int nxtVal=Integer.parseInt(nextVal);
