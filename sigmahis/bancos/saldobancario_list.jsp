  {
    appendFilter += " and upper(a.cod_banco) like '%"+request.getParameter("banco").toUpperCase()+"%'";
    banco = request.getParameter("banco");
  }
  if (request.getParameter("anio") != null && !request.getParameter("anio").trim().equals(""))
  {
		appendFilter += "  and upper(a.cpto_anio) like '%"+request.getParameter("anio").toUpperCase()+"%'";
    anio = request.getParameter("anio");
  }
	 if (request.getParameter("cuenta") != null && !request.getParameter("cuenta").trim().equals(""))
