		appendFilter += "  and upper(a.cuenta_banco) like '%"+request.getParameter("cuenta").toUpperCase()+"%'";
    cuenta = request.getParameter("cuenta");
  }

   if(!appendFilter.trim().equals("") || appendFilter != null )
  {

  sql = "select distinct a.cpto_anio anio, ' [ ' ||a.cod_banco || ' ] '||c.nombre||' '||b.descripcion as nombre, a.cod_banco as banco, a.cuenta_banco as cuenta FROM tbl_con_detalle_cuenta a, tbl_con_cuenta_bancaria b, tbl_con_banco c WHERE a.cuenta_banco=b.cuenta_banco and a.cod_banco=b.cod_banco and a.compania=b.compania and b.compania = c.compania and b.cod_banco=c.cod_banco and a.compania="+(String) session.getAttribute("_companyId")+appendFilter+" order by cpto_anio desc, nombre asc";
