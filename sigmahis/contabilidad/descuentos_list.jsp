  if (request.getParameter("desde") != null)
  {
    appendFilter += " and upper(dia_desde) like '%"+request.getParameter("desde").toUpperCase()+"%'";
    searchOn = "dia_desde";
    searchVal = request.getParameter("desde");
    searchType = "1";
    searchDisp = "Desde";
  }
  else if (request.getParameter("hasta") != null)
